{
  "id": "gist-reveal",
  "kind": "Pod",
  "apiVersion": "v1beta1",
  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "gist-reveal",
      "containers": [{
        "name": "gist-reveal",
        "image": "ryanj/gist-reveal.it",
        "env": [
          {
            "name": "OPENSHIFT_APP_DNS",
            "value": "DNS_IP"
          },
          {
            "name": "IP_ADDR",
            "value": "0.0.0.0"
          },
          {
            "name": "PORT",
            "value": "8080"
          },
          {
            "name": "GA_TRACKER",
            "value": "${GA_TRACKER}"
          },
          {
            "name": "REVEAL_SOCKET_SECRET",
            "value": "secret"
          },
          {
            "name": "DEFAULT_GIST",
            "value": "GIST_ID"
          },
          {
            "name": "GH_CLIENT_ID",
            "value": "YOUR_GITHUB_ID"
          },
          {
            "name": "GH_CLIENT_SECRET",
            "value": "********"
          }
        ],
        "ports": [{
          "containerPort": 8080,
        }]
      }]
    }
  },
  "labels": {
    "name": "gist-reveal"
  }
}
